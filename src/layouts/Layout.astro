---
import '../styles/global.css';
import { SITE } from '../config/site.mjs';
import type { SEOProps } from '../types/seo';
import Analytics from '../components/Analytics.astro';

interface Props extends SEOProps {
  lang?: string;
}

const {
  title = SITE.title,
  description = SITE.description,
  keywords,
  canonicalURL,
  ogTitle = title,
  ogDescription = description,
  ogImage = SITE.ogImage,
  ogType = 'website',
  twitterCard = 'summary_large_image',
  twitterTitle = ogTitle,
  twitterDescription = ogDescription,
  twitterImage = ogImage,
  noindex = false,
  nofollow = false,
  lang = SITE.defaultLanguage,
} = Astro.props;

// Construct full URLs
const currentPath = Astro.url.pathname;
const canonicalPath = canonicalURL || currentPath;
const siteURL = new URL(canonicalPath, SITE.url);

// Handle image URLs - support both absolute URLs and relative paths
const getFullImageUrl = (image: string): string => {
  if (image.startsWith('http://') || image.startsWith('https://')) {
    return image;
  }
  return new URL(image, SITE.url).href;
};

const fullOgImage = getFullImageUrl(ogImage);
const fullTwitterImage = getFullImageUrl(twitterImage);

// Build robots meta content
const robotsContent = [
  noindex ? 'noindex' : 'index',
  nofollow ? 'nofollow' : 'follow',
].join(', ');
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="generator" content={Astro.generator} />

		<!-- Resource Hints -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="dns-prefetch" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://www.googletagmanager.com" />
		<link rel="dns-prefetch" href="https://www.googletagmanager.com" />
        <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

		
		<!-- Preload Critical Resources -->
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		{keywords && <meta name="keywords" content={keywords} />}
		<meta name="robots" content={robotsContent} />
		<link rel="canonical" href={siteURL.href} />
		<slot name="head" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={ogType} />
		<meta property="og:url" content={siteURL.href} />
		<meta property="og:title" content={ogTitle} />
		<meta property="og:description" content={ogDescription} />
		<meta property="og:image" content={fullOgImage} />
		<meta property="og:site_name" content={SITE.title} />
		
		<!-- Twitter -->
		<meta name="twitter:card" content={twitterCard} />
		<meta name="twitter:url" content={siteURL.href} />
		<meta name="twitter:title" content={twitterTitle} />
		<meta name="twitter:description" content={twitterDescription} />
		<meta name="twitter:image" content={fullTwitterImage} />

		<!-- Google Analytics -->
		<Analytics />
	</head>
	<body class="min-h-screen bg-background-dark text-white selection:bg-primary selection:text-white">
		<slot />
	</body>
</html>
