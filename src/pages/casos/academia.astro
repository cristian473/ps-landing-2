---
export const prerender = true;

import Layout from "../../layouts/Layout.astro";
import AcademiaCase from "../../components/case-studies/AcademiaCase";
import { SITE } from "../../config/site.mjs";

const caseStudyName = "academia";
---

<Layout
  title="Caso Academia de Capacitación: 1.200 alumnos gestionados | Puro Software"
  description="De inscripciones por Google Forms y cuotas en efectivo a un sistema que gestiona 1.200 alumnos, pagos y cursadas. Caso de éxito de desarrollo a medida."
  canonicalURL={new URL("/casos/academia", SITE.url).href}
>
  <main>
    <AcademiaCase client:load />
  </main>
</Layout>

<script define:vars={{ caseStudyName }}>
  // Track case study view
  document.addEventListener('DOMContentLoaded', () => {
    if (typeof window.trackCaseStudyView === 'function') {
      window.trackCaseStudyView(caseStudyName);
    }
  });
</script>
