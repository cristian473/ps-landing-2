---
import Layout from "../../layouts/Layout.astro";
import CorralonCase from "../../components/case-studies/CorralonCase";
import { SITE } from "../../config/site.mjs";

const caseStudyName = "corralon";
---

<Layout
  title="Herramienta para Corralones: Presupuestos automáticos por WhatsApp | Puro Software"
  description="Tu corralón responde presupuestos por WhatsApp al instante, aunque estés en el mostrador. Sin chatbots molestos. Sin reemplazar tu atención."
  canonicalURL={new URL("/casos/corralon", SITE.url).href}
>
  <main>
    <CorralonCase client:load />
  </main>
</Layout>

<script define:vars={{ caseStudyName }}>
  // Track case study view
  document.addEventListener('DOMContentLoaded', () => {
    if (typeof window.trackCaseStudyView === 'function') {
      window.trackCaseStudyView(caseStudyName);
    }
  });
</script>
